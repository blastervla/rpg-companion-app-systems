    "id": "spells_section",
    "type": "section",
    "show_divider": true,
    "content_item_min_width": 1,
    "collapsible": true,
    "header": [
      {
        "id": "spells_section_icon",
        "type": "icon",
        "name": "ic_whatshot",
        "color": "#7b1fa2",
        "size": "medium",
        "margin_top": 8,
        "margin_right": 8,
        "margin_left": 16
