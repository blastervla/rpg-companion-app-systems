      },
      {
        "id": "spells_section_header_spacer",
        "type": "spacer"
      },
      {
        "id": "spells_section_add_spell",
        "type": "selectResources",
        "stat": "spells",
        "resource_id": "spell",
        "view_type": "icon",
        "should_append": true,
        "should_save_on_selection": true,
        "filters": {
          "classes": {
            "type": "map",
            "map_value_key": "$class",
            "components": {
              "type": "stat",
              "stat": "classes"
            },
            "mapper": {
              "type": "stat",
              "stat": "$class.class.name"
            }
          }
        }
      }
    ],
