  "post_edit": {
    "type": "sequence",
    "effects": [
      {
        "type": "when",
        "clauses": [
          {
            "condition": {
              "type": "stat",
              "stat": "$is_new"
            },
            "effect": {
              "type": "forEach",
              "components": {
                "type": "stat",
                "stat": "creator_ability_score_increases"
              },
              "apply": {
                "type": "addToStat",
                "meta_stat": {
                  "type": "concat",
                  "components": {
                    "type": "list",
                    "components": [
                      {
                        "type": "stat",
                        "stat": "$forEachValue.temp_selected_modifier"
                      },
                      {
                        "type": "constant",
                        "value": "_score",
                        "value_type": "string"
                      }
                    ]
                  }
                },
                "value": {
                  "type": "stat",
