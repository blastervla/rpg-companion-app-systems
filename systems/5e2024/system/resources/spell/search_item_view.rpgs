view spell_search_item() =
  listItem(
    id = "spell_search_item",
    title = name,
    subtitle = display_type,
    first_line_extra = display_requirements,
    second_line_extra = range,
    chips = [
      createChip(
        id = "spell_search_item_source_chip",
        background_color = "hint",
        style = "compact",
        resource_id = "source",
        resource_instance_ids_stat = "source",
        resource_display_stat = "abbreviation",
      ),
    ],
  );
