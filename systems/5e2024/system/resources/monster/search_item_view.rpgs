view monster_search_item() =
  listItem(
    id = "monster_search_item",
    title = name,
    first_line_extra = formatted_cr,
    subtitle = formatted_type,
    second_line_extra = formatted_xp,
    chips = [
      createChip(
        id = "spell_search_item_source_chip",
        background_color = "hint",
        style = "compact",
        resource_id = "source",
        resource_instance_ids_stat = "source",
        resource_display_stat = "abbreviation",
      ),
    ],
  );
