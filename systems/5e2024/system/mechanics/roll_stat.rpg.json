                  "type": "list",
                  "components": [
                    {
                      "type": "concat",
                      "components": {
                        "type": "list",
                        "components": [
                          {
                            "type": "constant",
                            "value": "min(2d20) + ",
                            "value_type": "string"
                          },
                          {
                            "type": "metaStat",
