            "id": "detect_thoughts"
          }
        },
        {
          "system": "5e2024",
          "resource_id": "spell",
          "stats": {
            "name": {
              "value": "Disguise Self"
            },
            "source": {
              "value": "phb"
            },
            "level": {
              "value": "spell_level_1"
            },
            "school": {
              "value": "spell_school_illusion"
