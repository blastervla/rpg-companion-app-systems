      "hint": {
        "type": "constant",
        "value": "Name",
        "value_type": "string"
      },
      "edit_stat": "name",
      "style": "title",
      "max_length": 40,
      "validation_message": {
        "type": "when",
        "clauses": [
          {
            "condition": {
              "type": "isEmpty",
              "components": {
                "type": "stat",
