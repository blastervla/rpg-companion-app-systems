view background_search_item() =
  listItem(
    id = "background_search_item",
    title = name,
    subtitle = formatted_description,
    chips = [
      createChip(
        id = "spell_search_item_source_chip",
        background_color = "hint",
        style = "compact",
        resource_id = "source",
        resource_instance_ids_stat = "source",
        resource_display_stat = "abbreviation",
      ),
    ],
  );
