        {
          "resource_id": "spell",
          "stats": {
            "name": {
              "value": "Phantasmal Force"
            },
            "source": {
              "value": "phb"
            },
            "level": {
              "value": "spell_level_2"
            },
            "school": {
              "value": "spell_school_illusion"
