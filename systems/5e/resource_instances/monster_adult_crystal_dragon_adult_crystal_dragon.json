        {
          "resource_id": "spell",
          "stats": {
            "id": "command",
            "name": {
              "value": "Command"
            },
            "source": {
              "value": "phb"
            },
            "level": {
              "value": "spell_level_1"
            },
            "school": {
              "value": "spell_school_enchantment"
